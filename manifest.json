{
  "name": "<div/> counter",
  "version": "1.0",
  "description": "Counts all the <div/>'s",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
      ],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "browser_action": {
    "default_title": "<div/> counter",
    "default_popup": "popup.html"
  },
  "permissions": [ "activeTab" ],
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}